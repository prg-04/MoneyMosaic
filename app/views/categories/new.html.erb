<%= render partial: 'layouts/shared/header', locals: { heading: 'ADD NEW CATEGORY', path: new_category_path } %>

<%= form_with model: @category, url: categories_path, local: true, class: 'form' do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "off", placeholder: "Category Name", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :icon, class: "form-label" %>
    <%= f.file_field :icon, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
