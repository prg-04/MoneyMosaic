<section class="header bg-primary text-white py-2 d-flex justify-content-between">
  <% if back_button_enabled? %>
    <a href="#" class="text-white" onclick="goBack(); return false;">
      <i class="fa-solid fa-chevron-left text-white" style="font-size: 1.5rem;"></i>
    </a>
  <% else %>
    <!-- Display a placeholder or remove the arrow -->
  <% end %>
  <h1 class="h3"><%= heading %></h1>
    <div class="d-flex justify-content-end mb-1 position-relative">
      <% if user_signed_in? %>
        <%= button_to("Log Out", destroy_user_session_path, method: :delete, class: "btn btn-danger") %>
      <% end %>
    </div>
</section>

<script>
  function goBack() {
    <% if back_to_categories? %>
      window.location.href = '<%= categories_path %>';
    <% else %>
      window.history.back();
    <% end %>
  }
</script>


<%= render partial: "layouts/shared/notice" %>
