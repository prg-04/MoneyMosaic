<div class="container my-5">
  <h2 class="text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'row g-3 needs-validation', novalidate: true, multipart: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-md-6 mx-auto">
      <label for="validationName" class="form-label">Name</label>
      <%= f.text_field :name, class: 'form-control', id: 'validationName', autofocus: true, autocomplete: 'name' %>
    </div>

    <div class="col-md-6 mx-auto">
      <label for="validationEmail" class="form-label">Email</label>
      <%= f.email_field :email, class: 'form-control', id: 'validationEmail', autofocus: true, autocomplete: 'email', required: true %>
    </div>

    <div class="col-md-6 mx-auto">
      <label for="validationPassword" class="form-label">Password</label>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
      <%= f.password_field :password, class: 'form-control', id: 'validationPassword', autocomplete: 'new-password', required: true %>
    </div>

    <div class="col-md-6 mx-auto">
      <label for="validationPasswordConfirmation" class="form-label">Password Confirmation</label>
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'validationPasswordConfirmation', autocomplete: 'new-password', required: true %>
    </div>

    <div class="col-12 text-center">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
